<%= form_for list, remote: true, authenticity_token: true do |form| %>
	<div class="field form-group">
		<%= form.label :name %><br/>
		<%= form.text_field :name, placeholder: 'Name', autofocus: true %>
	</div>
	<div class="field form-group">
		<%= form.label :permissions %></br>	
		<%= form.select :permissions, List::AVAIL_PERMISSIONS %><br/>
	</div>
	<div class="field form-group">
		<%= form.submit 'Save', class: "btn btn-default", data: { create_list_button: true } %>
	</div>
<% end %>
